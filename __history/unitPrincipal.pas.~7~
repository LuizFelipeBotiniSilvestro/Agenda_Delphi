{$R *.dfm}

uses unitDM;

procedure TForm1.txtBuscaChange(Sender: TObject);
begin
  //Busca no campo nome o que tiver escrito dentro da txt busca.
  DM.tbContatos.Locate('nome', txtBusca.Text, [loPartialKey]);
end;

end.
